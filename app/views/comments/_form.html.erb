<%= simple_form_for([@post, @post.comments.build]) do |f| %>
    <div class="field">
        <div class="control">
            <%= f.input :name, required: true, input_html: {class: 'input'}, wrapper: false, label_html: {class: 'label'} %>
        </div>
    </div>

    <div class="field">
        <div class="control">
            <%= f.input :comm, label: 'Your Comment', required: true, input_html: {class: 'textarea'}, wrapper: false, label_html: {class: 'label'} %>
        </div>
    </div>

    <%= f.button :submit, 'Throw a brick', class: "button is-primary" %>  
<% end %>