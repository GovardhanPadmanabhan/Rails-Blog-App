<%= content_for :page_title, @post.title %> 
 
 <section class="section">
    <div class="container">
        <!--<h1 class="title">
            <%= @post.title %>
        </h1>
        <div class="content">
            <%= @post.content %>
        </div>
        -->
        <nav class="level">
            <div class="level-left">
            </div>

            <div class="level-right">
                <p class="level-item">
                    <%= link_to "Change Brick", edit_post_path(@post), class:"button" %>
                </p>
                <p class="level-item">
                    <%= link_to "Remove Brick", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-danger" %> 
                </p>
            </div>
        </nav>
        <hr />
        <div class="content">
            <h1><i><%= @post.content %></i></h1>
        </div>

        
        
    </div>
 </section>


 <section class="section comments">
    <div class="container">
        <h2 class="subtitle is-5"><strong><%= @post.comments.count %></strong> Comments </h2>
        <%= render @post.comments %>
        <div class="comment-form">
            <hr />
            <h3 class="subtitle is-3">Leave your comments</h3>
            <%= render 'comments/form' %>
        <div>
    </div>
 </section>